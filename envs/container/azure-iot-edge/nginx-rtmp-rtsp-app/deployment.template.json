{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "REGISTRY0": {
                "username": "$CONTAINER_REGISTRY_USERNAME",
                "password": "$CONTAINER_REGISTRY_PASSWORD",
                "address": "$CONTAINER_REGISTRY_ADDRESS"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "nginx-rtmp": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.nginx-rtmp}",
              "createOptions": {
                "ExposedPorts": {
                  "80/tcp": {},
                  "8080/tcp": {},
                  "443/tcp": {},
                  "1935/tcp": {}
                },
                "HostConfig": {
                  "PortBindings": {
                    "80/tcp": [
                      {
                        "HostIp": "",
                        "HostPort": "80"
                      }
                    ],
                    "8080/tcp": [
                      {
                        "HostIp": "",
                        "HostPort": "8080"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostIp": "",
                        "HostPort": "5443"
                      }
                    ],
                    "1935/tcp": [
                      {
                        "HostIp": "",
                        "HostPort": "1935"
                      }
                    ]
                  },
                  "LogConfig": {
                    "Type": "",
                    "Config": {}
                  }
                },
                "Labels": {
                  "com.docker.compose.project": "alpine",
                  "com.docker.compose.service": "nginx-rtmp",
                  "com.docker.compose.oneoff": "False",
                  "com.docker.compose.container-number": "1",
                  "com.docker.compose.version": "1.24.0",
                  "com.docker.compose.config-hash": "1422d0f93349b52365f8a4b6fc53096cb19bbadadc5c36e0d3f1f3e8ec214b7a"
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {},
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}